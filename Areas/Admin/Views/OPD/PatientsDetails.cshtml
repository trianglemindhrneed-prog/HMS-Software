@model HMSCore.Areas.Admin.Models.PatientsDetailsViewModel
@{
    ViewData["Title"] = "Patients Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
 
<head>
    <style>
        .btn-secondary {
            background: #18d118bf;
            font-weight: bold;
            color: aliceblue;
        }

            .btn-secondary:hover {
                color: aliceblue;
            }
    </style>
</head>
<section class="content-header">
    <h1>Patients Details</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Dashboard"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Patients Details</li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <div class="pull-left">
                <a href="/Admin/OPD/AddPatient" class="btn btn-danger btn-flat">
                    <i class="fa fa-plus"></i> Add New
                </a>

                <form method="post" asp-action="DeleteSelected" style="display:inline-block;">
                    <input type="hidden" name="selectedIds" id="selectedIds" />
                    <button type="submit" class="btn btn-primary btn-flat" style="margin-left:10px;">Delete Selected</button>
                </form>
            </div>

            <div class="pull-right">
                <form method="get" class="form-inline">
                    <!-- Page Size -->
                    <select id="pageSizeSelect" class="form-control input-sm">
                        <option value="20">20</option>
                        <option value="30">30</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>


                    <!-- Filter Column -->
                    <select class="form-control input-sm" asp-for="FilterColumn">
                        <option value="">-- Select --</option>
                        <option value="PatientName">Patient Name</option>
                        <option value="Contact">Contact</option>
                        <option value="DepartmentName">Department Name</option>
                        <option value="DoctorName">Doctor Name</option> 
                    </select>

                    <input type="text" asp-for="Keyword" class="form-control input-sm" placeholder="Search" />
                    <button type="submit" class="btn btn-primary btn-flat">Search</button>
                    <a href="/Admin/OPd/PatientsDetails" class="btn btn-default btn-flat">Show All</a>
                </form>
            </div>
        </div>
        <!-- Date Filter -->
        <div class="row mt-3" style="margin-left: 3px !important;">
            <div class="col-sm-3">
                <label>From Date:</label>
                <input type="date" asp-for="FromDate" class="form-control input-sm" />
            </div>
            <div class="col-sm-3">
                <label>To Date:</label>
                <input type="date" asp-for="ToDate" class="form-control input-sm" />
            </div>
            <div class="col-sm-2" style="margin-top: 22px;">
                <button type="submit" class="btn btn-primary btn-flat">Search</button>
            </div>

        </div>
        <div class="box-body table-responsive">
            <table class="table table-bordered table-hover mt-2">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="chkAll" onclick="toggleAll(this)" /></th>
                        <th>Patient Id</th>
                        <th>Patient Name</th>
                        <th>Age</th>
                        <th>Contact No</th>
                        <th>Address</th>
                        <th>Department</th>
                        <th>Doctor</th>
                        <th>Doctor Contact</th>
                        <th>Consult Fee</th>
                        <th>Details</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var patient in Model.Patients)
                    {
                        <tr>
                            <td><input type="checkbox" class="chkSelect" value="@patient.PatientId" /></td>
                            <td>@patient.PatientId</td>
                            <td>@patient.PatientName</td>
                            <td>@patient.Age</td>
                            <td>@patient.ContactNo</td>
                            <td>@patient.Address1</td>
                            <td>@patient.DepartmentName</td>
                            <td>@patient.DoctorName</td>
                            <td>@patient.DoctorNumber</td>
                            <td>@patient.ConsultFee</td>
                            <td>
                                <a href="/Admin/OPD/CheckupHistory?patientId=@patient.PatientId" class="btn btn-sm btn-warning">
                                    <i class="fa fa-bars"></i>
                                </a>
                            </td>
                            <td>
                                <a href="/Admin/OPD/AddPatient?patientId=@patient.PatientId" class="btn btn-sm btn-warning">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                            <td>
                                <form method="post" asp-action="DeletePatients" onsubmit="return confirm('Are you sure to delete this patient?');">
                                    <input type="hidden" name="id" value="@patient.PatientId" />
                                    <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div id="pagination" class="mt-2"></div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function toggleAll(chkAll) {
            var checkboxes = document.querySelectorAll('.chkSelect');
            checkboxes.forEach(c => c.checked = chkAll.checked);
        }

        // Handle Delete Selected IDs
        document.querySelector('form[asp-action="DeleteSelected"]').onsubmit = function () {
            var selected = Array.from(document.querySelectorAll('.chkSelect:checked')).map(c => c.value);
            if (selected.length === 0) {
                alert('Please select at least one slot.');
                return false;
            }
            document.getElementById('selectedIds').value = selected.join(',');
        }
    </script>
}
