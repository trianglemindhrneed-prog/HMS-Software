@model HMSCore.Areas.Admin.Models.PatientBillViewModel

@{
    ViewData["Title"] = "Patient Bill History";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
} 
<head>
    <style>
        .btn-secondary {
            background: #18d118bf;
            font-weight: bold;
            color: aliceblue;
        }

            .btn-secondary:hover {
                color: aliceblue;
            }
    </style>
</head>
<section class="content-header">
    <h1>Patient Bill History</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Dashboard"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Patient Bill History</li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <div class="pull-left">
                <a href="/Admin/OPD/PatientsBill" class="btn btn-danger btn-flat">
                    <i class="fa fa-plus"></i> Add New
                </a>
                <form method="post" asp-action="DeleteSelectedBill" id="deleteSelectedForm" style="display:inline-block;">
                    <input type="hidden" name="selectedIds" id="selectedIds" />
                    <button type="submit" class="btn btn-primary btn-flat" style="margin-left:10px;">
                        Delete Selected
                    </button>
                </form>

            </div>

            <div class="pull-right">
                <form method="get" class="form-inline">
                    <!-- Page Size -->
                    <select id="pageSizeSelect" class="form-control input-sm">
                        <option value="20">20</option>
                        <option value="30">30</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>


                    <!-- Filter Column -->
                    <select class="form-control input-sm" asp-for="FilterColumn">
                        <option value="">-- Select --</option>
                        <option value="PatientName">Patient Name</option>
                        <option value="Contact">Contact</option>
                    </select>

                    <input type="text" asp-for="Keyword" class="form-control input-sm" placeholder="Search" />
                    <button type="submit" class="btn btn-primary btn-flat">Search</button>
                    <a href="/Admin/OPd/BillHistory" class="btn btn-default btn-flat">Show All</a>
                </form>
            </div>
        </div>
        <!-- Date Filter -->
        <div class="row mt-3" style="margin-left: 3px !important;">
            <div class="col-sm-3">
                <label>From Date:</label>
                <input type="date" id="FromDate" asp-for="FromDate" class="form-control input-sm" />

            </div>
            <div class="col-sm-3">
                <label>To Date:</label>
                <input type="date" id="ToDate" asp-for="ToDate" class="form-control input-sm" />
            </div>
            <div class="col-sm-2" style="margin-top: 22px;">
                <button type="button" class="btn btn-primary btn-flat" onclick="submitSearchForm()">Search</button>
            </div>

        </div>
        <div class="box-body table-responsive">
            <table class="table table-bordered table-hover mt-2">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="chkAll" onclick="toggleAll(this)" /></th>
                        <th>Bill No</th>
                        <th>Patient Id</th>
                        <th>Patient Name</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Date</th> 
                        <th>Consult Fee</th> 
                        <th>Grand Total</th>
                        <th>Bill History</th>
                        <th>Edit</th>
                        <th>Delete</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var bill in Model.Bills)
                    {
                        <tr>
                            <td><input type="checkbox" class="chkSelect" value="@bill.BillNo" /></td>
                            <td>@bill.BillNo</td> 
                            <td>@bill.PatientNo</td>
                            <td>@bill.Name</td>
                            <td>@bill.Age</td>
                            <td>@bill.Gender</td> 
                            <td>@bill.BillDate?.ToString("dd/MM/yyyy")</td> 
                            <td>@bill.ConsultFee?.ToString("0.00")</td>
                            <td>@bill.GrandTotal?.ToString("0.00")</td>
                            <td> 
                                <a class="btn btn-secondary"
                                   target="_blank"
                                   href="@Url.Action("PrintBilling","OPD",new { pageName = "BillRe_Print", id = @bill.BillNo })">
                                <i class="fa fa-eye"></i>
                            </a>
                            </td>
                            <td>
                                <a href="/Admin/OPD/EditBill?billNo=@bill.BillNo" class="btn btn-sm btn-warning">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                            <td>
                                <form method="post" asp-action="DeleteBill" onsubmit="return confirm('Are you sure to delete this patient?');">
                                    <input type="hidden" name="billNo" value="@bill.BillNo" />
                                    <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

            <div id="pagination" class="mt-2"></div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function toggleAll(chkAll) {
            var checkboxes = document.querySelectorAll('.chkSelect');
            checkboxes.forEach(c => c.checked = chkAll.checked);
        }

        // Handle Delete Selected IDs
             document.getElementById('deleteSelectedForm').onsubmit = function () {
            var selected = Array.from(document.querySelectorAll('.chkSelect:checked'))
                                .map(c => c.value);

            if (selected.length === 0) {
                alert('Please select at least one bill.');
                return false;
            }

            document.getElementById('selectedIds').value = selected.join(',');
            return true;
        };

    </script>
    <script>
        function submitSearchForm() {
            // Find the existing form on the page (the one with method="get")
            var form = document.querySelector('form[method="get"]');
            if (!form) {
                alert('Search form not found!');
                return;
            }

            // Create hidden inputs for FromDate and ToDate if they don't exist
            if (!document.getElementById('hiddenFromDate')) {
                var fromInput = document.createElement('input');
                fromInput.type = 'hidden';
                fromInput.name = 'fromDate';
                fromInput.id = 'hiddenFromDate';
                form.appendChild(fromInput);

                var toInput = document.createElement('input');
                toInput.type = 'hidden';
                toInput.name = 'toDate';
                toInput.id = 'hiddenToDate';
                form.appendChild(toInput);
            }

            // Copy values from visible inputs using 'name' selector
            var visibleFrom = document.querySelector('input[name="FromDate"]');
            var visibleTo = document.querySelector('input[name="ToDate"]');

            document.getElementById('hiddenFromDate').value = visibleFrom ? visibleFrom.value : '';
            document.getElementById('hiddenToDate').value = visibleTo ? visibleTo.value : '';

            // Submit the form
            form.submit();
        }


    </script>

}
