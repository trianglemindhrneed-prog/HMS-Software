@model List<HMSCore.Areas.Admin.Models.Bed>

@{
    ViewData["Title"] = "Bed List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Bed List</h1>
    <ol class="breadcrumb">
        <li><a href="/admin/Dashboard/Index"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Bed List</li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">

            <div class="pull-left">
                <a class="btn btn-danger btn-flat"
                   href="@Url.Action("AddBed", "BedManagement", new { area = "Admin" })">
                    <i class="fa fa-plus"></i> Add New Bed
                </a>

                <button type="submit"
                        form="deleteSelectedForm"
                        class="btn btn-primary btn-flat"
                        style="margin-left:10px;">
                    Delete Selected
                </button>
            </div>

            <div class="pull-right">
              
                <form method="get" class="form-inline">
                    <!-- Page Size -->
                    <select id="pageSizeSelect" class="form-control input-sm">
                        <option value="20">20</option>
                        <option value="30">30</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <select name="FilterField" class="form-control input-sm">
                        <option value="">-- Select --</option>
                        <option value="BedCategory">Bed Category</option>
                        <option value="BedNumber">Bed Number</option>
                    </select>

                    <input type="text" name="FilterValue" class="form-control input-sm" placeholder="Search" />
                    <button type="submit" class="btn btn-primary btn-flat">Search</button>

                    <a href="@Url.Action("BedList", "BedManagement", new { area = "Admin" })"
                       class="btn btn-default btn-flat">Show All</a>
                </form>
            </div>

        </div>

        <div class="box-body table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="chkAll" /></th>
                        <th>Category</th> 
                        <th>Bed Number</th>
                        <th>Description</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox"
                                       name="selectedIds"
                                       value="@b.BedId"
                                       class="chkItem"
                                       form="deleteSelectedForm" />
                            </td>
                            <td>@b.CategoryName</td> 
                            <td>@b.BedNumber</td>
                            <td>@b.Description</td>

                            <td>
                                <a class="btn btn-sm btn-warning"
                                   href="@Url.Action("AddBed","BedManagement",
                                                                      new { id = b.BedId, area = "Admin" })">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>

                            <td>
                                <form method="post"
                                      asp-action="DeleteBed"
                                      asp-route-id="@b.BedId"
                                      onsubmit="return confirm('Are you sure?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                                        }
                </tbody>
            </table>
            <div id="pagination" class="mt-2"></div>
        </div>
    </div>
</section>

<form method="post" asp-action="DeleteSelectedBed" id="deleteSelectedForm"></form>

@section Scripts {
    <script>
        document.getElementById("chkAll").addEventListener("change", function () {
            document.querySelectorAll(".chkItem")
                .forEach(c => c.checked = this.checked);
        });
    </script>
}
