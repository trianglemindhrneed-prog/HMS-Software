@model List<HMSCore.Areas.Admin.Models.IPDNursingTaskViewModel>

@{
    ViewData["Title"] = "IPD Nursing Task";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<head>
    <style>
        .btn-secondary {
            background: #18d118bf;
            font-weight: bold;
            color: aliceblue;
        }

            .btn-secondary:hover {
                color: aliceblue;
            }
    </style>
</head>
<section class="content-header">
    <h1>IPD Nursing Tasks</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Dashboard"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">IPD Nursing Tasks</li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <div class="pull-left">
                <a href="/Admin/IPDDetails/IPDNursingTasks" class="btn btn-danger btn-flat">
                    <i class="fa fa-plus"></i> Add New Task
                </a>

                <form method="post" asp-action="DeleteSelectedTask" id="deleteForm" style="display:inline-block;">
                    <div id="hiddenInputsContainer"></div>
                    <button type="submit" class="btn btn-primary btn-flat" style="margin-left:10px;">Delete Selected</button>
                </form>
            </div>
           

            <div class="pull-right">
                <form method="get" asp-action="IPDNursingTasksDetails" class="form-inline mb-3">

                    <!-- Page Size -->
                    <select id="pageSizeSelect" class="form-control input-sm">
                        <option value="20">20</option>
                        <option value="30">30</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>

                    <select name="status"
                            class="form-control input-sm"
                            style="width:130px;">
                        <option value="">-- Status --</option>
                        <option value="PatientId">PatientId</option>
                        <option value="TaskName">TaskName</option>
                        <option value="Status">Status</option>

                    </select>
                    <input type="text"
                           name="search"
                           value="@Context.Request.Query["search"]"
                           class="form-control input-sm"
                           style="width:120px;" />

                    <button type="submit" class="btn btn-primary btn-sm">
                        Search
                    </button>

                    <a asp-action="IPDNursingTasksDetails"
                       class="btn btn-default btn-sm">
                        Show All
                    </a>

                </form>

            </div>
        </div>
        <!-- Date Filter -->

        <div class="box-body table-responsive">
            <table class="table table-bordered table-striped">
           
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" id="chkAll" onclick="toggleAll(this)" />
                            </th>
                            <th>Patient Id</th>
                            <th>Task Name</th>
                            <th>Scheduled Date</th>
                            <th>Given Date</th>
                            <th>Status</th>
                            <th>Edit Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var row in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="chkSelect" value="@row.TaskId" />
                                    </td>

                                    <td>@(row.PatientId ?? "-")</td>

                                    <td>@(row.TaskName ?? "-")</td>

                                    <td>
                                    @(row.ScheduledDate.HasValue
                                     ? row.ScheduledDate.Value.ToString("dd-MM-yyyy")
                                      : "-")
                                     </td>

                                    <td>
                                    @(row.GivenDate.HasValue 
                                    ? row.GivenDate.Value.ToString("dd-MM-yyyy")
                                      : "-")
                                    </td>

                                <td>
                                    @(!string.IsNullOrEmpty(row.Status) ? row.Status : "N/A")
                                </td>
                                    <td>
                                <a id="ctl00_ContentPlaceHolder1_gvTasks_ctl02_lnkEditStatus" title="Edit Status" class="btn btn-sm btn-warning" href="javascript:__doPostBack('ctl00$ContentPlaceHolder1$gvTasks$ctl02$lnkEditStatus','')">
                                    <i class="fa fa-edit"></i>
                                </a>
                                </td>

                                    <td>
                                        <!-- Edit -->
                                        <a class="btn btn-warning btn-sm"
                                           asp-area="Admin"
                                           asp-controller="IPD"
                                           asp-action="IPDNursingTasks"
                                           asp-route-taskId="@row.TaskId">
                                            <i class="fa fa-edit"></i>
                                        </a>

                                        <!-- Delete -->
                                        <form method="post"
                                          asp-action="DeleteTask"
                                              style="display:inline;"
                                              onsubmit="return confirm('Are you sure to delete this task?');">
                                            <input type="hidden" name="id" value="@row.TaskId" />
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-danger">
                                    No Records Found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
       


            <div id="pagination" class="mt-2"></div>
        </div>
    </div>
</section>

