@model HMSCore.Areas.Admin.Models.IPDNursingTaskViewModel

@{
    ViewData["Title"] = "IPD Vital";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<style>
    .small-checkbox {
        width: 14px;
        height: 14px;
    }
</style>
<section class="content-header">
    <h1>IPD Nursing Tasks</h1>
    <ol class="breadcrumb">
        <li><a href="Dashboard.aspx"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="#">IPD Nursing Tasks</a></li>
        <li class="active">IPD Nursing Tasks</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">

                    <form asp-action="IPDNursingTasks"
                          asp-controller="IPDDetails"
                          asp-area="Admin"
                          method="post"
                          class="form-horizontal">

                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="TaskId" />

                        <!-- ================= ROW 1 ================= -->
                        <div class="form-group">

                            <div class="col-md-4">
                                <label>Patient</label>
                                <select asp-for="PatientId"
                                        asp-items="ViewBag.PatientList"
                                        class="form-control">
                                </select>
                                <span asp-validation-for="PatientId"
                                      class="text-danger"></span>


                            </div>

                            <div class="col-md-4">
                                <label>Task Details</label>
                                <input asp-for="TaskName"
                                       
                                       class="form-control" />
                                <span asp-validation-for="TaskName"
                                      class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label>Scheduled Date</label>
                                <input asp-for="ScheduledDate"
                                       type="date"
                                       class="form-control" />
                                <span asp-validation-for="ScheduledDate"
                                      class="text-danger"></span>
                            </div>

                        </div>

                        <!-- ================= ROW 2 ================= -->
                        <div class="form-group">

                            <div class="col-md-4">
                                <label>Given Date</label>
                                <input asp-for="GivenDate"
                                       type="date"
                                       class="form-control" />
                                <span asp-validation-for="GivenDate"
                                      class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Status" class="form-label">Status</label>
                                <select asp-for="Status" class="form-control">
                                    <option value="">-- Select Status --</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                            </div>

                          
                        </div>

                        <!-- ================= ROW 3 ================= -->
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Remarks</label>
                                <textarea asp-for="Remarks"
                                          class="form-control"
                                          rows="3"></textarea>
                                <span asp-validation-for="Remarks"
                                      class="text-danger"></span>
                            </div>
                        </div>

                        <!-- ================= BUTTONS ================= -->
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-9">

                                <button type="submit"
                                        class="btn btn-primary btn-flat">
                                    Save
                                </button>

                                <a asp-action="IPDBillingLedger"
                                   asp-controller="IPD"
                                   asp-area="Admin"
                                   class="btn btn-default btn-flat">
                                    Clear
                                </a>

                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
