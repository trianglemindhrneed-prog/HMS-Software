@model List<HMSCore.Areas.Admin.Models.Medicine>
@{
    ViewData["Title"] = "Medicine List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    string search = ViewData["Search"] as string;
}

<section class="content-header">
    <h1>Medicine List</h1>
    <ol class="breadcrumb">
        <li><a href="/admin/Dashboard/Index"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Medicine List</li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <div class="pull-left">
                <a class="btn btn-danger btn-flat"
                   href="@Url.Action("AddMedicine", "Pharmacy", new { area = "Admin" })">
                    <i class="fa fa-plus"></i> Add New
                </a>
                <button type="submit"
                        form="deleteSelectedForm"
                        class="btn btn-primary btn-flat"
                        style="margin-left:10px;">
                    Delete Selected
                </button>
            </div>

            <div class="pull-right">


                <form method="get" class="form-inline">
                    <!-- Page Size -->
                    <select id="pageSizeSelect" class="form-control input-sm">
                        <option value="20">20</option>
                        <option value="30">30</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <input type="text" name="search"
                           class="form-control input-sm"
                           style="width:150px;"
                           placeholder="Search Medicine"
                           value="@search" />
                    <button type="submit" class="btn btn-primary btn-flat" style="margin-left:5px;">Search</button>
                    <a href="@Url.Action("MedicineList", "Pharmacy", new { area = "Admin" })"
                       class="btn btn-default btn-flat" style="margin-left:5px;">Show All</a>
                </form>
            </div>
        </div>

        <div class="box-body table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="chkAll" /></th>
                        <th>Category</th>
                        <th>Product Name</th>
                        <th>Qty</th>
                        <th>MRP</th>
                        <th>Sale Price</th>
                        <th>Mfg</th>
                        <th>Expiry</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="selectedIds" value="@m.Id" class="chkItem" form="deleteSelectedForm" />
                            </td>
                            <td>@m.CategoryName</td>
                            <td>@m.ProductName</td>
                            <td>@m.Qty</td>
                            <td>@(m.MRP.HasValue ? "₹" + m.MRP.Value.ToString("0.00") : "")</td>
                            <td>@(m.CP.HasValue ? "₹" + m.CP.Value.ToString("0.00") : "")</td>

                            <td>@m.Mfg?.ToString("yyyy-MM-dd")</td>
                            <td>@m.ExpiryDate?.ToString("yyyy-MM-dd")</td>
                            <td>
                                <a class="btn btn-sm btn-warning"
                                   href="@Url.Action("AddMedicine", "Pharmacy", new { id = m.Id, area = "Admin" })">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                            <td>
                                <form method="post" asp-action="DeleteMedicine">
                                    <input type="hidden" name="id" value="@m.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="pagination" class="mt-2"></div>
        </div>
    </div>
</section>

<form method="post" asp-action="DeleteSelectedMedicine" id="deleteSelectedForm"></form>

@section Scripts {
    <script>
        document.getElementById("chkAll").addEventListener("change", function () {
            document.querySelectorAll(".chkItem").forEach(chk => chk.checked = this.checked);
        });
    </script>
}
