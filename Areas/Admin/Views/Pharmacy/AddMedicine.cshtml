@model HMSCore.Areas.Admin.Models.Medicine
@{
    ViewData["Title"] = Model.Id > 0 ? "Edit Medicine" : "Add Medicine";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>@ViewData["Title"]</h1>
    <ol class="breadcrumb">
        <li><a href="/admin/Dashboard/Index"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="@Url.Action("MedicineList", "Medicine", new { area = "Admin" })">Medicine List</a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <form asp-action="AddMedicine" method="post" class="form-horizontal">
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Category</label>
                                <div class="col-md-4">
                                    <select required asp-for="CId" class="form-control" asp-items="ViewBag.Categories">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="CId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Product Name <span class="required">*</span></label>
                                <div class="col-md-4">
                                    <input asp-for="ProductName" class="form-control" maxlength="200" required />
                                    <span asp-validation-for="ProductName" class="text-danger"></span>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Quantity <span class="required">*</span></label>
                                <div class="col-md-2">
                                    <input required asp-for="Qty" type="number" class="form-control" />
                                    <span asp-validation-for="Qty" class="text-danger"></span>
                                </div>

                                <label class="col-md-2 control-label">MRP</label>
                                <div class="col-md-2">
                                    <input asp-for="MRP" type="number" step="0.01" class="form-control" />
                                    <span asp-validation-for="MRP" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Sale Price <span class="required">*</span></label>
                                <div class="col-md-2">
                                    <input required asp-for="CP" type="number" step="0.01" class="form-control" />
                                    <span asp-validation-for="CP" class="text-danger"></span>
                                </div>

                                <label class="col-md-2 control-label">Mfg Date</label>
                                <div class="col-md-2">
                                    <input asp-for="Mfg" type="date" class="form-control" />
                                    <span asp-validation-for="Mfg" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Expiry Date</label>
                                <div class="col-md-2">
                                    <input asp-for="ExpiryDate" type="date" class="form-control" />
                                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Description</label>
                                <div class="col-md-4">
                                    <textarea asp-for="Description" class="form-control" rows="3" maxlength="500"></textarea>
                                  
                                </div>
                            </div>
                        </div>


                        <div class="form-actions">
                            <div class="col-md-offset-2 col-md-9">
                                <button type="submit" class="btn btn-success btn-flat">Save</button>
                                <a asp-action="MedicineList" class="btn btn-primary btn-flat">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
