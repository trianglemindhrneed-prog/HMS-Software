@model List<HMSCore.Areas.Admin.Models.IpdAdmission>
<section class="content-header">
    <h1>IPD Admissions</h1>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">

            <div class="pull-left">
                <a class="btn btn-danger btn-flat"
                   href="@Url.Action("AddIPDAdmission", "IPD", new { area = "Admin" })">
                    <i class="fa fa-plus"></i> Add IPD
                </a>

                <button type="submit" form="deleteSelectedForm" class="btn btn-primary btn-flat" style="margin-left:10px;">
                    Delete Selected
                </button>
            </div>

            <div class="pull-right">
                <form method="get" asp-action="IPDPatients" class="form-inline mb-3">

                    <select name="status"
                            class="form-control input-sm"
                            style="width:130px;">
                        <option value="">-- Status --</option>
                        <option value="PatientName">Patient Name</option>
                        <option value="Gender">Gender</option>
                        <option value="Contact">Contact</option>
                    </select>
                    <input type="text"
                           name="search"
                           value="@Context.Request.Query["search"]"
                           class="form-control input-sm"
                           style="width:120px;"
                          />

                    <button type="submit" class="btn btn-primary btn-sm">
                         Search
                    </button>

                    <a asp-action="IPDPatients"
                       class="btn btn-default btn-sm">
                        Show All
                    </a>

                </form>
            </div>

        </div>

        <div class="box-body table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="chkAll" /></th>
                        <th>Patient ID</th>
                        <th>Contact Nu.</th>
                        <th>Patient Name</th>
                        <th>Age</th>
                        <th>Gende</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Details</th>
                        <th>Discharge</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="selectedIds" value="@p.AdmissionId" class="chkItem" />
                            </td>
                            <td>@p.PatientID</td>
                            <td>@p.Number</td>
                            <td>@p.Name</td>
                            <td>@p.Age</td>
                            <td>@p.Gender</td>

                            <td>
                                @(p.AdmissionDateTime.HasValue? p.AdmissionDateTime.Value.ToString("dd/MM/yyyy") : "")

                            </td>

                            <td>@p.Status</td>

                            <!-- DETAILS -->
                            <td>
                               
                             <a class="btn btn-info btn-xs"
                                        title="Details"
       href="@Url.Action("IPDCheckupHistory", "IPD", new { pid = p.PatientID, area = "Admin" })">
                                    <i class="fa fa-bars"></i>
                     </a>
                        </td>

                            <!-- DISCHARGE -->
                            <td>
                            @if (p.Status != "Discharged")
                                {
                                    <a class="btn btn-warning btn-xs"
                                       href="@Url.Action("IPDDischargePatient","IPD",
                                                       new { PID = p.PatientID, area = "Admin" })">
                                Discharge
                            </a>
                                                        }
                                else
                                {
                                    <span class="text-muted">Already Discharged</span>
                                }
                            </td>

                           
                            <td>
                                <a class="btn btn-warning btn-sm"
                                   href="@Url.Action("AddIPDAdmission","IPD",
                                              new { id = p.AdmissionId, area = "Admin" })">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>

                            <!-- DELETE -->
                            <td>
                                <form method="post" asp-action="ManageIPD"
                                      onsubmit="return confirm('Are you sure?')">
                                    <input type="hidden" name="id" value="@p.AdmissionId" />
                                    <input type="hidden" name="actionType" value="Delete" />
                                    <button class="btn btn-danger btn-sm">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                                        }
                </tbody>
            </table>
        </div>
    </div>
</section>