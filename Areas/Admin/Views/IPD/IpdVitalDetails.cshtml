@model List<HMSCore.Areas.Admin.Models.IPDVital>

<section class="content-header">
    <h1>Vital Details</h1>
</section>


<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">

            <div class="pull-left">
                <a class="btn btn-danger btn-flat btn-sm"
                   href="@Url.Action("IpdVital", "IPD", new { area = "Admin" })">
                    <i class="fa fa-plus"></i> Add IPD
                </a>

                <button type="submit"
                        form="deleteSelectedForm"
                        class="btn btn-primary btn-flat btn-sm"
                        style="margin-left:10px;">
                    Delete Selected
                </button>
            </div>

            <div class="pull-right">
                <form method="get"
                      asp-action="IPDPatients"
                      class="form-inline">

                    <select id="pageSizeSelect" class="form-control input-sm">
                        <option value="20">20</option>
                        <option value="30">30</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>

                    <select name="status"
                            class="form-control input-sm"
                            style="width:140px;">
                        <option value="">-- Search By --</option>
                     
                        <option value="Name">Patient Name</option>
                     @*    <option value="RecordedDate">Date</option> *@

                    </select>

                    <input type="text"
                           name="search"
                           value="@Context.Request.Query["search"]"
                           class="form-control input-sm"
                           placeholder="Search..."
                           style="width:150px;" />

                    <button type="submit"
                            class="btn btn-primary btn-sm">
                        <i class="fa fa-search"></i>
                    </button>

                    <a asp-controller="Ipd" asp-action="IpdVitalDetails" asp-route-search="" asp-route-filter=""
                       class="btn btn-default btn-sm">
                        Show All
                    </a>
                </form>
            </div>

        </div>

        <div class="box-body table-responsive">

           @*  <div class="row mt-3" style="margin-left: 3px !important;">
                <div class="col-sm-3">
                    <label>From Date:</label>
                  <input type="date" id="FromDate" asp-for="FromDate" class="form-control input-sm" />

                </div>
                <div class="col-sm-3">
                    <label>To Date:</label>
                 <input type="date" id="ToDate" asp-for="ToDate" class="form-control input-sm" />
                </div>
                <div class="col-sm-2" style="margin-top: 22px;">
                    <button type="button" class="btn btn-primary btn-flat" onclick="submitSearchForm()">Search</button>
                </div>

            </div> *@
            <table class="table table-bordered table-hover table-striped">
                <thead class="bg-gray">
                    <tr class="text-center">
                        <th style="width:30px;"><input type="checkbox" id="chkAll" /></th>
                        <th style="width:100px;">Patient ID</th>
                        <th style="width:120px;">Patient Name</th>
                        <th style="width:150px;">Date</th>
                        <th style="width:90px;">Blood Group</th>
                        <th style="width:90px;">Temperature (°C)</th>
                        <th style="width:70px;">Pulse</th>
                        <th style="width:70px;">Height</th>
                        <th style="width:70px;">Weight</th>
                        <th style="width:90px;">BP</th>
                        <th style="width:90px;">SpO2 (%)</th>
                        <th style="width:120px;">Respiratory Rate</th>
                        <th style="width:120px;">Notes</th>
                        <th style="width:60px;">Edit</th>
                        <th style="width:60px;">Delete</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr class="text-center">
                            <td>
                                <input type="checkbox" name="selectedIds" value="@p.VitalsId" class="chkItem" />
                            </td>
                            <td>@p.PatientId</td>
                            <td>@p.Name</td>
                            <td>@p.RecordedDate.ToString("yyyy-MM-dd")</td>
                            <td>@p.BloodGroup</td>
                            <td>@p.Temperature</td>
                            <td>@p.Pulse</td>
                            <td>@p.Height</td>
                            <td>@p.Weight</td>
                            <td>@p.BP</td>
                            <td>@p.SpO2</td>
                            <td>@p.RR</td>
                            <td class="text-left">@p.Notes</td>

                            <!-- EDIT -->
                            <td>
                                <a class="btn btn-warning btn-xs" href="@Url.Action("IpdVital", "IPD", new { id = p.VitalsId, area = "Admin" })">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>

                            <!-- DELETE -->
                            <td>
                                <form method="post" asp-action="ManageIPD" onsubmit="return confirm('Are you sure?')">
                                    <input type="hidden" name="id" value="@p.VitalsId" />
                                    <input type="hidden" name="actionType" value="Delete" />
                                    <button class="btn btn-danger btn-xs">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>