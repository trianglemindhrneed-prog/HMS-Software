
@model List<HMSCore.Areas.Admin.Models.IPDProgressNote>

@{
    ViewData["Title"] = "Sale Medicine Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<head>
    <style>
        .btn-secondary {
            background: #18d118bf;
            font-weight: bold;
            color: aliceblue;
        }

            .btn-secondary:hover {
                color: aliceblue;
            }
    </style>
</head>
<section class="content-header">
    <h1>Sale Medicine Report</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Dashboard"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Sale Medicine Report</li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <div class="pull-left">
                <a href="/Admin/IPD/IPDProgressNote" class="btn btn-danger btn-flat">
                    <i class="fa fa-plus"></i>  IPD Progress Note
                </a>

                <form method="post" asp-action="DeleteSelecteddata" id="deleteForm" style="display:inline-block;">
                    <div id="hiddenInputsContainer"></div>
                    <button type="submit" class="btn btn-primary btn-flat" style="margin-left:10px;">Delete Selected</button>
                </form>
            </div>


            <div class="pull-right">
            <form method="get" asp-action="IPDPNDetails" class="form-inline mb-3">

                <!-- Page Size -->
                <select id="pageSizeSelect" class="form-control input-sm">
                    <option value="20">20</option>
                    <option value="30">30</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>

                <select name="status"
                        class="form-control input-sm"
                        style="width:130px;">
                    <option value="">-- Status --</option>
                    <option value="PatientId">PatientId</option>
                    <option value="Gender">DocterName</option>
                    <option value="VisitDate">Visite Date</option>
                </select>
                <input type="text"
                       name="search"
                       value="@Context.Request.Query["search"]"
                       class="form-control input-sm"
                       style="width:120px;" />

                <button type="submit" class="btn btn-primary btn-sm">
                    Search
                </button>

                    <a asp-action="IPDPNDetails"
                   class="btn btn-default btn-sm">
                    Show All
                </a>

            </form>

            </div>
        </div>
        <!-- Date Filter -->
        
        <div class="box-body table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="chkAll" onclick="toggleAll(this)" /></th>
                        <th>Patient Id</th>
                        <th>Doctor Name</th>
                        <th>Visit Date</th>
                        <th>Subjective</th>
                        <th>Objective</th>
                        <th>Assessment</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in Model)
                    {
                        <tr>
                            <td><input type="checkbox" class="chkSelect" value="@row.NoteId" /></td>
                            <td>@row.PatientId</td>
                            <td>@row.DoctorName</td>
                            <td>@row.VisitDate.ToString("dd-MM-yyyy")</td>
                            <td>@row.Subjective</td>
                            <td>@row.Objective</td>
                            <td>@row.Assessment</td>

                            <td>
                                <a class="btn btn-warning btn-sm"
                                   href="@Url.Action("IPDProgressNote", "IPD",
                                               new { noteId = row.NoteId, area = "Admin" })">
                                <i class="fa fa-edit"></i>
                            </a>
                       </td>
                       <td>

                                <form method="post" asp-action="DeleteNotes" onsubmit="return confirm('Are you sure to delete this patient?');">
                                    <input type="hidden" name="id" value="@row.NoteId" />
                                    <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
                                </form>

                        </td>
                    </tr>
                     }
                </tbody>
            </table>


            <div id="pagination" class="mt-2"></div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function toggleAll(chkAll) {
            var checkboxes = document.querySelectorAll('.chkSelect');
            checkboxes.forEach(c => c.checked = chkAll.checked);
        }

        // Handle Delete Selected IDs
        document.getElementById('deleteForm').onsubmit = function () {
            var selected = Array.from(document.querySelectorAll('.chkSelect:checked')).map(c => c.value);
            if (selected.length === 0) {
                alert('Please select at least one invoice.');
                return false;
            }

            // Clear previous hidden inputs
            var container = document.getElementById('hiddenInputsContainer');
            container.innerHTML = '';

            // Create hidden input for each selected invoiceId
            selected.forEach(id => {
                var input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'selectedIds'; // maps to string[] in controller
                input.value = id;
                container.appendChild(input);
            });
        };
    </script>

    <script>
        function submitSearchForm() {
            // Find the existing form on the page (the one with method="get")
            var form = document.querySelector('form[method="get"]');
            if (!form) {
                alert('Search form not found!');
                return;
            }

            // Create hidden inputs for FromDate and ToDate if they don't exist
            if (!document.getElementById('hiddenFromDate')) {
                var fromInput = document.createElement('input');
                fromInput.type = 'hidden';
                fromInput.name = 'fromDate';
                fromInput.id = 'hiddenFromDate';
                form.appendChild(fromInput);

                var toInput = document.createElement('input');
                toInput.type = 'hidden';
                toInput.name = 'toDate';
                toInput.id = 'hiddenToDate';
                form.appendChild(toInput);
            }

            // Copy values from visible inputs using 'name' selector
            var visibleFrom = document.querySelector('input[name="FromDate"]');
            var visibleTo = document.querySelector('input[name="ToDate"]');

            document.getElementById('hiddenFromDate').value = visibleFrom ? visibleFrom.value : '';
            document.getElementById('hiddenToDate').value = visibleTo ? visibleTo.value : '';

            // Submit the form
            form.submit();
        }


    </script>

}
