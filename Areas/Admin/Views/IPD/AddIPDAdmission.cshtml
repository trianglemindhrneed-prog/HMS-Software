@using HMSCore.Areas.Admin.Models
@model IpdAdmission


<style>
    <style >
    .field-validation-error {
        display: block;
        min-height: 18px; /* space reserved */
        font-size: 12px;
    }

    .form-group {
        margin-bottom: 12px;
    }


    /* Har form control ke liye spacing */
    .form-control,
    select,
    textarea {
        padding-top: 8px;
        padding-bottom: 8px;
    }

    /* Har field ke niche gap */
    .form-group,
    .col-md-3,
    .col-md-4 {
        margin-bottom: 18px;
    }

    /* Validation message ke liye fixed space */
    .field-validation-error {
        display: block;
        min-height: 18px;
        font-size: 12px;
        margin-top: 4px;
    }

    label {
        margin-bottom: 6px;
        font-weight: 600;
    }
</style>




@{
    ViewData["Title"] = "IPD Admission";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}
<script>
        $("#ddlBedCategory").change(function () {
        var categoryId = $(this).val();

        $("#ddlBed").empty().append('<option>Loading...</option>');

        if (categoryId) {
            $.get("/Admin/IPD/GetBeds",
                { categoryId: categoryId },
                function (data) {
                    $("#ddlBed").empty();
                    $.each(data, function (i, item) {
                        $("#ddlBed").append(
                            $("<option></option>").val(item.value).text(item.text)
                        );
                    });
                });
        }
    });
</script>

    <section class="content-header">
        <h1>IPD Admission</h1>
        <ol class="breadcrumb">
            <li><a href="Dashboard.aspx"><i class="fa fa-home"></i> Home</a></li>
            <li class="active">IPD Admission</li>
        </ol>
    </section>
    <section class="content">
    <div class="card">
      <div class="container-fluid" style="background-color: white; padding: 20px;">

            @* Success Message *@
            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Success
                </div>
            }

            @* Patient ID Display *@
            @if (ViewBag.PatientID != null)
            {
                <div class="alert alert-success">
                    <strong>Patient ID :</strong> @ViewBag.PatientID
                </div>
            }

            <form asp-action="AddIpdAdmission" method="post">
                <div class="row g-3">

                    <!-- Patient ID -->
                    <div class="col-md-3">
                        <label class="form-label">Patient ID</label>
                        <input asp-for="PatientID" class="form-control" readonly />
                        <span asp-validation-for="PatientID" class="text-danger"></span>
                    </div>

                    <!-- Name -->
                    <div class="col-md-3">
                        <label class="form-label">Patient Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Age -->
                    <div class="col-md-3">
                        <label class="form-label">Age</label>
                        <input asp-for="Age" class="form-control" placeholder="Age" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>

                    <!-- Gender -->
                    <div class="col-md-3">
                        <label class="form-label">Gender</label>
                        <select asp-for="Gender" class="form-control">
                            <option value="">-- Select --</option>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <!-- Contact Number -->
                    <div class="col-md-3">
                        <label class="form-label">Contact Number</label>
                        <input asp-for="Number"
                               class="form-control"
                               placeholder="Enter 10 digit contact number"
                               maxlength="10"
                               oninput="this.value=this.value.replace(/[^0-9]/g,'');" />
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>

                    <!-- Doctor -->
                    <div class="col-md-3">
                        <label class="form-label">Doctor</label>
                        <select asp-for="DoctorId"
                                asp-items="ViewBag.Doctors"
                                class="form-control">
                            <option value="">-- Select Doctor --</option>
                        </select>
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>

                    <!-- Bed Category -->
                    <div class="col-md-3">
                        <label class="form-label">Bed Category</label>
                        <select asp-for="BedCategoryId"
                                asp-items="ViewBag.BedCategories"
                                class="form-control">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="BedCategoryId" class="text-danger"></span>
                    </div>

                    <!-- Bed -->
                    <div class="col-md-3">
                        <label class="form-label">Bed</label>
                        <select asp-for="BedId"
                                asp-items="ViewBag.Beds"
                                class="form-control">
                            <option value="">-- Select Bed --</option>
                        </select>
                        <span asp-validation-for="BedId" class="text-danger"></span>
                    </div>

                    <!-- Admission Date -->
                    <div class="col-md-3">
                        <label class="form-label">Admission Date</label>
                        <input asp-for="AdmissionDateTime"
                               type="datetime-local"
                               class="form-control" />
                        <span asp-validation-for="AdmissionDateTime" class="text-danger"></span>
                    </div>

                    <!-- Initial Diagnosis -->
                    <div class="col-md-4">
                        <label class="form-label">Initial Diagnosis</label>
                        <textarea asp-for="InitialDiagnosis"
                                  class="form-control"
                                 ></textarea>
                    </div>

                    <!-- Advance Amount -->
                    <div class="col-md-4">
                        <label class="form-label">Advance Amount</label>
                        <input asp-for="AdvanceAmount"
                               class="form-control"
                               placeholder="Enter advance amount" />
                        <span asp-validation-for="AdvanceAmount" class="text-danger"></span>
                    </div>

                    <br/>
                    <!-- Submit -->
                    <div class="col-md-12 text-end">
                        <button type="submit" class="btn btn-success">
                            Save 
                        </button>
                       
                    </div>

                </div>
            </form>

            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }

        </div>
    </div>
</section>
