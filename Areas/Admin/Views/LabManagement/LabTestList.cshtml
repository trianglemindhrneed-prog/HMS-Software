@model List<HMSCore.Areas.Admin.Models.LabTest>
@{
    ViewData["Title"] = "Lab Test List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    string search = ViewData["Search"] as string;
}

<section class="content-header">
    <h1>Lab Test List</h1>
    <ol class="breadcrumb">
        <li><a href="/admin/Dashboard/Index"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Lab Test List</li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <div class="pull-left">
                <a class="btn btn-danger btn-flat"
                   href="@Url.Action("AddLabTest", "LabManagement", new { area = "Admin" })">
                    <i class="fa fa-plus"></i> Add New
                </a>
                <button type="submit"
                        form="deleteSelectedForm"
                        class="btn btn-primary btn-flat"
                        style="margin-left:10px;">
                    Delete Selected
                </button>
            </div>

            <div class="pull-right">


                <form method="get" class="form-inline">
                    <!-- Page Size -->
                    <select id="pageSizeSelect" class="form-control input-sm">
                        <option value="20">20</option>
                        <option value="30">30</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <!-- Filter Column -->
                    <select class="form-control input-sm" name="filterColumn"> 
                        <option value="">-- Select --</option>
                        <option value="CategoryName">LabTest Category</option>
                        <option value="LabTestName">LabTest Name</option>
                     
                    </select> 
                    <input type="text" name="search"
                           value="@Context.Request.Query["search"]"
                           class="form-control input-sm"
                           placeholder="Search" />

                    <button type="submit" class="btn btn-primary btn-flat" style="margin-left:5px;">Search</button>
                    <a href="@Url.Action("LabTestList", "LabManagement", new { area = "Admin" })"
                       class="btn btn-default btn-flat" style="margin-left:5px;">Show All</a>
                </form>
            </div>
        </div>

        <div class="box-body table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="chkAll" /></th>
                        <th>Category</th>
                        <th>Lab Test Name</th>
                        <th>Unit</th>
                        <th>Reference Manager</th>
                        <th>Test Price</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox"
                                       name="selectedIds"
                                       value="@m.LabId"
                                       class="chkItem"
                                       form="deleteSelectedForm" />
                            </td>

                            <td>@m.CategoryName</td>
                            <td>@m.LabTestName</td>
                            <td>@m.Unit</td>
                            <td>@m.RefrenceManager</td>
                            <td>@(string.IsNullOrEmpty(m.TestPrice) ? "" : "₹ " + m.TestPrice)</td>

                            <td>
                                <a class="btn btn-sm btn-warning"
                                   href="@Url.Action("AddLabTest", "LabManagement", new { id = m.LabId, area = "Admin" })">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>

                            <td>
                                <form method="post" asp-action="DeleteLabTest">
                                    <input type="hidden" name="id" value="@m.LabId" />
                                    <button type="submit"
                                            class="btn btn-sm btn-danger"
                                            onclick="return confirm('Are you sure?');">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <div id="pagination" class="mt-2"></div>
        </div>
    </div>
</section>

<form method="post" asp-action="DeleteSelectedLabTest" id="deleteSelectedForm"></form>

@section Scripts {
    <script>
        document.getElementById("chkAll").addEventListener("change", function () {
            document.querySelectorAll(".chkItem").forEach(chk => chk.checked = this.checked);
        });
    </script>
}
