 
@model List<HMSCore.Areas.Admin.Models.Nurse>
@{
    ViewData["Title"] = "Nurses";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Nurses</h1>
    <ol class="breadcrumb">
        <li><a href="/admin/Dashboard/index"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Nurses</li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <a class="btn btn-danger btn-flat" asp-action="AddNurse">Add New</a>
            <form method="post" asp-action="DeleteSelectedNurses" style="display:inline;">
                <input type="hidden" name="selectedIds" value="" id="selectedIds" />
                <button type="submit" class="btn btn-primary btn-flat">Delete Selected</button>
            </form>
        </div>

        <div class="box-body table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="chkAll" /></th>
                        <th>Nurse Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var nurse in Model)
                    {
                        <tr>
                            <td><input type="checkbox" name="chkSelect" value="@nurse.NurseId" /></td>
                            <td>@nurse.FullName</td>
                            <td>@nurse.Email</td>
                            <td>@nurse.MobileNu</td>
                            <td>
                                <form method="post" asp-action="ManageNurse">
                                    <input type="hidden" name="id" value="@nurse.NurseId" />
                                    <input type="hidden" name="actionType" value="ToggleStatus" />
                                    <button type="submit" class="btn btn-sm @(nurse.IsActive ? "btn-success" : "btn-danger")">
                                        @(nurse.IsActive ? "Active" : "Inactive")
                                    </button>
                                </form>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-warning" asp-action="AddNurse" asp-route-id="@nurse.NurseId">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                            <td>
                                <form method="post" asp-action="ManageNurse" onsubmit="return confirm('Are you sure?');">
                                    <input type="hidden" name="id" value="@nurse.NurseId" />
                                    <input type="hidden" name="actionType" value="Delete" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<script>
    document.getElementById('chkAll').addEventListener('change', function () {
        var checked = this.checked;
        document.querySelectorAll('input[name="chkSelect"]').forEach(cb => cb.checked = checked);
    });
</script>
