@model List<HMSCore.Areas.Admin.Models.Nurse>

@{
    ViewData["Title"] = "Nurses";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    string search = ViewData["Search"] as string;
}

<section class="content-header">
    <h1>Nurses</h1>
    <ol class="breadcrumb">
        <li><a href="/admin/Dashboard/index"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Nurses</li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <div class="pull-left">
                <a class="btn btn-danger btn-flat" asp-action="AddNurse"><i class="fa fa-plus"></i> Add New</a>

                <!-- Bulk Delete Form -->
                <form method="post" asp-action="DeleteSelectedNurses" id="deleteSelectedForm" style="display:inline;">
                    <button type="submit" class="btn btn-primary btn-flat" style="margin-left:10px;">
                        Delete Selected
                    </button>
                </form>
            </div>

            <div class="pull-right">
                <form method="get" class="form-inline">
                    <!-- Page Size -->
                    <select id="pageSizeSelect" class="form-control input-sm">
                        <option value="20">20</option>
                        <option value="30">30</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <input type="text" name="search"
                           value="@search"
                           class="form-control input-sm"
                           placeholder="Nurse Name"
                           style="width:150px;" />
                    <button class="btn btn-primary btn-flat" type="submit">Search</button>
                    <a class="btn btn-default btn-flat"
                       href="@Url.Action("NurseList", "Master", new { area = "Admin" })">
                        Show All
                    </a>
                </form>
            </div>
        </div>

        <div class="box-body table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="chkAll" /></th>
                        <th>Nurse Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var nurse in Model)
                    {
                        <tr>
                            <!-- Bulk checkbox -->
                            <td>
                                <input type="checkbox"
                                       name="selectedIds"
                                       value="@nurse.NurseId"
                                       form="deleteSelectedForm"
                                       class="chkItem" />
                            </td>

                            <td>@nurse.FullName</td>
                            <td>@nurse.Email</td>
                            <td>@nurse.MobileNu</td>

                            <!-- Status Toggle -->
                            <td>
                                <form method="post" asp-action="ToggleNurseStatus"
                                      onsubmit="return confirm('Are you sure you want to change the status?');">
                                    <input type="hidden" name="id" value="@nurse.NurseId" />
                                    <button type="submit" class="btn btn-sm @(nurse.IsActive ? "btn-success" : "btn-danger")">
                                        @(nurse.IsActive ? "Active" : "Inactive")
                                    </button>
                                </form>
                            </td>

                            <!-- Edit -->
                            <td>
                                <a class="btn btn-sm btn-warning"
                                   asp-action="AddNurse"
                                   asp-route-id="@nurse.NurseId">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>

                            <!-- Delete -->
                            <td>
                                <form method="post" asp-action="DeleteNurse"
                                      onsubmit="return confirm('Are you sure?');">
                                    <input type="hidden" name="id" value="@nurse.NurseId" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Select / Deselect all checkboxes
        document.getElementById('chkAll').addEventListener('change', function () {
            var checked = this.checked;
            document.querySelectorAll('.chkItem').forEach(cb => cb.checked = checked);
        });
    </script>
}
