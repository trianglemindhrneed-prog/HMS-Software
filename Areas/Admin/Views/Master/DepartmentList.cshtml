@model List<HMSCore.Areas.Admin.Models.Department>

@{
    ViewData["Title"] = "Department List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    string search = ViewData["Search"] as string;
    int? status = ViewData["Status"] as int?;
}

<section class="content-header">
    <h1>Departments</h1>
    <ol class="breadcrumb">
        <li><a href="/admin/Dashboard/Index"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Departments</li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">

            <div class="pull-left">
                <a class="btn btn-danger btn-flat"
                   href="@Url.Action("AddDepartment", "Master", new { area = "Admin" })">
                    <i class="fa fa-plus"></i> Add Department
                </a>

                <button type="submit"
                        form="deleteSelectedForm"
                        class="btn btn-primary btn-flat"
                        style="margin-left:10px;">
                    Delete Selected
                </button>
            </div>

            <!-- Search -->
            <div class="pull-right">
                <form method="get" class="form-inline">
                    <!-- Page Size -->
                    <select id="pageSizeSelect" class="form-control input-sm">
                        <option value="20">20</option>
                        <option value="30">30</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <input type="text" name="search"
                           class="form-control input-sm"
                           style="width:150px;"
                           placeholder="Department Name"
                           value="@search" />

                    <select name="status" class="form-control input-sm" style="margin-left:5px;">
                        <option value="">All</option>
                        <option value="1" selected="@(status == 1)">Active</option>
                        <option value="0" selected="@(status == 0)">Inactive</option>
                    </select>

                    <button type="submit" class="btn btn-primary btn-flat" style="margin-left:5px;">
                        Search
                    </button>

                    <a href="@Url.Action("DepartmentList", "Master", new { area = "Admin" })"
                       class="btn btn-default btn-flat"
                       style="margin-left:5px;">
                        Show All
                    </a>
                </form>
            </div>
        </div>

        <!-- TABLE -->
        <div class="box-body table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="chkAll" /></th>
                        <th>Department Name</th>
                        <th>Status</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var dept in Model)
                    {
                        <tr>
                            <!-- Checkbox (bind to bulk delete form) -->
                            <td>
                                <input type="checkbox"
                                       name="selectedIds"
                                       value="@dept.DepartmentId"
                                       class="chkItem"
                                       form="deleteSelectedForm" />
                            </td>

                            <td>@dept.DepartmentName</td>

                            <!-- STATUS -->
                            <td>
                                <form method="post" asp-action="ToggleDepartmentStatus" onsubmit="return confirm('Are you sure you want to change the status?');">
                                    <input type="hidden" name="id" value="@dept.DepartmentId" />
                                    <button type="submit"
                                            class="btn btn-xs @(dept.IsActive ? "btn-success" : "btn-danger")">
                                        @(dept.IsActive ? "Active" : "Inactive")
                                    </button>
                                </form>

                            </td>

                            <!-- EDIT -->
                            <td>
                                <a class="btn btn-sm btn-warning"
                                   href="@Url.Action("AddDepartment","Master",
                                                                        new { id = dept.DepartmentId, area = "Admin" })">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>

                            <!-- DELETE -->
                            <td>
                                <form method="post"
                                      asp-action="DeleteDepartment"
                                      onsubmit="return confirm('Are you sure?')">
                                    <input type="hidden" name="id" value="@dept.DepartmentId" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                                        }
                </tbody>
            </table>
        </div>
    </div>
</section>

<!-- BULK DELETE FORM (EMPTY BUT IMPORTANT) -->
<form method="post"
      asp-action="DeleteSelectedDepartments"
      id="deleteSelectedForm"></form>

@section Scripts {
    <script>
        document.getElementById("chkAll").addEventListener("change", function () {
            document.querySelectorAll(".chkItem")
                .forEach(chk => chk.checked = this.checked);
        });
    </script>
}
