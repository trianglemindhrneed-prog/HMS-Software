@model List<HMSCore.Areas.Admin.Models.Doctor>

@{
    ViewData["Title"] = "Doctors List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    string search = ViewData["Search"] as string;
}

<section class="content-header">
    <h1>Doctors</h1>
    <ol class="breadcrumb">
        <li><a href="/admin/Dashboard/Index"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Doctors</li>
    </ol>
</section>

<section class="content">
    <div class="box">

        <div class="box-header with-border">
            <div class="pull-left">
                <a class="btn btn-danger btn-flat"
                   href="@Url.Action("AddDoctor", "Master", new { area = "Admin" })">
                    <i class="fa fa-plus"></i> Add Doctor
                </a>

                <button type="submit" form="deleteSelectedForm"
                        class="btn btn-primary btn-flat" style="margin-left:10px;">
                    Delete Selected
                </button>
            </div>

            <div class="pull-right">
                <form method="get" class="form-inline">
                    <input type="text" name="search"
                           value="@search"
                           class="form-control input-sm"
                           placeholder="Doctor Name"
                           style="width:150px;" />
                    <button class="btn btn-primary btn-flat" type="submit">Search</button>
                    <a class="btn btn-default btn-flat"
                       href="@Url.Action("DoctorsList", "Master", new { area = "Admin" })">
                        Show All
                    </a>
                </form>
            </div>
        </div>

        <!-- TABLE -->
        <div class="box-body table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="chkAll" /></th>
                        <th>Department</th>
                        <th>Doctor Name</th>
                        <th>Email</th>
                        <th>Mobile</th>
                        <th>Status</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var d in Model)
                    {
                        <tr>
                            <!-- Checkbox for bulk delete -->
                            <td>
                                <input type="checkbox"
                                       name="selectedIds"
                                       value="@d.DoctorId"
                                       class="chkItem"
                                       form="deleteSelectedForm" />
                            </td>

                            <td>@d.DepartmentName</td>
                            <td>@d.FullName</td>
                            <td>@d.DEmail</td>
                            <td>@d.MobileNu</td>

                            <!-- STATUS Toggle -->
                            <td>
                                <form method="post" asp-action="ToggleDoctorStatus"
                                      onsubmit="return confirm('Are you sure you want to change the status?');">
                                    <input type="hidden" name="id" value="@d.DoctorId" />
                                    <button type="submit" class="btn btn-xs @(d.IsActive ? "btn-success" : "btn-danger")">
                                        @(d.IsActive ? "Active" : "Inactive")
                                    </button>
                                </form>

                            </td>

                            <!-- EDIT -->
                            <td>
                                <a class="btn btn-warning btn-sm"
                                   href="@Url.Action("AddDoctor", "Master", new { id = d.DoctorId, area = "Admin" })">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>

                            <!-- DELETE -->
                            <td>
                                <form method="post"
                                      asp-action="ManageDoctor"
                                      onsubmit="return confirm('Are you sure?');">
                                    <input type="hidden" name="id" value="@d.DoctorId" />
                                    <input type="hidden" name="actionType" value="Delete" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<!-- BULK DELETE FORM (EMPTY BUT IMPORTANT) -->
<form method="post" asp-action="DeleteSelectedDoctors" id="deleteSelectedForm"></form>

@section Scripts {
    <script>
        // Select All / Deselect All
        document.getElementById("chkAll").addEventListener("change", function () {
            document.querySelectorAll(".chkItem").forEach(chk => chk.checked = this.checked);
        });
    </script>
}
